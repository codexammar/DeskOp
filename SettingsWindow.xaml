<Window x:Class="DeskOp.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Height="300"
        Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow"
        Background="#1E1E1E">

    <Border Padding="20" Background="#2A2A2A" CornerRadius="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="FrameworkElement">
                    <Setter Property="Margin" Value="0,10,0,0"/>
                </Style>
            </StackPanel.Resources>

            <TextBlock Text="Choose Theme Color"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"/>

            <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,0">
                <!-- Light -->
                <Button Width="50" Height="50" Background="White" Tag="#FFFFFF"
                        Click="ThemeButton_Click" ToolTip="Light Theme"/>

                <!-- Dark -->
                <Button Width="50" Height="50" Background="#292B2F" Tag="#292B2F"
                        Click="ThemeButton_Click" ToolTip="Dark Theme"
                        Margin="10,0,0,0"/>

                <!-- Neon Green -->
                <Button Width="50" Height="50" Background="#2ECC71" Tag="#2ECC71"
                        Click="ThemeButton_Click" ToolTip="Neon Green"
                        Margin="10,0,0,0"/>

                <!-- Purple -->
                <Button Width="50" Height="50" Background="#9B59B6" Tag="#9B59B6"
                        Click="ThemeButton_Click" ToolTip="Purple Theme"
                        Margin="10,0,0,0"/>
            </WrapPanel>

            <Button Content="Close"
                    Width="100"
                    Height="30"
                    Margin="0,20,0,0"
                    Click="Close_Click"
                    Background="#3A3D41"
                    Foreground="White"
                    Cursor="Hand"/>
        </StackPanel>
    </Border>
</Window>
