<Window x:Class="DeskOp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DeskOp"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="False"
        SizeToContent="WidthAndHeight"
        MouseDown="Window_MouseDown"
        Loaded="Window_Loaded">

    <Border Background="#CC1E1E1E"
            Margin="10"
            Padding="4"
            CornerRadius="20">
        <!-- ✅ Fixed Drop Shadow -->
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>

        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <!-- 🎨 Shared Button Style -->
            <WrapPanel.Resources>
                <Style TargetType="Button" x:Key="ModeButtonStyle">
                    <Setter Property="Background" Value="#292B2F"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <Setter Property="Width" Value="100"/>
                    <Setter Property="Height" Value="60"/>
                    <Setter Property="Margin" Value="6"/>
                    <Setter Property="Padding" Value="8,4"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Border"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="12">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#3A3D41"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#1F1F1F"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </WrapPanel.Resources>

            <!-- 🎮 Buttons -->
            <Button Style="{StaticResource ModeButtonStyle}" Click="ModeButton_Click" Tag="Games">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="🎮" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBlock Text="Games" FontSize="12"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource ModeButtonStyle}" Click="ModeButton_Click" Tag="Productivity">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="💼" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBlock Text="Productivity" FontSize="12"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource ModeButtonStyle}" Click="ModeButton_Click" Tag="None">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="🚫" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBlock Text="None" FontSize="12"/>
                </StackPanel>
            </Button>

            <Button Style="{StaticResource ModeButtonStyle}" Click="ModeButton_Click" Tag="All">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                    <TextBlock Text="🧩" FontSize="20" HorizontalAlignment="Center"/>
                    <TextBlock Text="All" FontSize="12"/>
                </StackPanel>
            </Button>
        </WrapPanel>
    </Border>
</Window>
