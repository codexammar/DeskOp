<Window x:Class="DeskOp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="DeskOp"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent"
        ShowInTaskbar="False"
        Topmost="False"
        SizeToContent="WidthAndHeight"
        Loaded="Window_Loaded">

    <Border Background="#CC1E1E1E" Margin="10" CornerRadius="15">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">

            <!-- ✅ Reusable Button Style with selection trigger -->
            <StackPanel.Resources>
                <Style TargetType="Button" x:Key="ModeButtonStyle">
                    <Setter Property="Background" Value="#292B2F"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="14"/>
                    <Setter Property="FontFamily" Value="Segoe UI"/>
                    <Setter Property="Width" Value="120"/>
                    <Setter Property="Height" Value="100"/>
                    <Setter Property="Margin" Value="10"/>
                    <Setter Property="BorderThickness" Value="0"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="Border"
                                        Background="{TemplateBinding Background}"
                                        CornerRadius="10">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#3A3D41"/>
                                    </Trigger>
                                    <Trigger Property="IsPressed" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="#202225"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </StackPanel.Resources>

            <!-- ✅ Mode Button Grid -->
            <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button x:Name="GamesButton"
                        Style="{StaticResource ModeButtonStyle}"
                        Click="ModeButton_Click"
                        Tag="Games">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="🎮" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Text="Games" FontSize="14"/>
                    </StackPanel>
                </Button>
                <Button x:Name="ProductivityButton"
                        Style="{StaticResource ModeButtonStyle}"
                        Click="ModeButton_Click"
                        Tag="Productivity">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="💼" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Text="Productivity" FontSize="14"/>
                    </StackPanel>
                </Button>
                <Button x:Name="NoneButton"
                        Style="{StaticResource ModeButtonStyle}"
                        Click="ModeButton_Click"
                        Tag="None">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="🚫" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Text="None" FontSize="14"/>
                    </StackPanel>
                </Button>
                <Button x:Name="AllButton"
                        Style="{StaticResource ModeButtonStyle}"
                        Click="ModeButton_Click"
                        Tag="All">
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                        <TextBlock Text="🧩" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Text="All" FontSize="14"/>
                    </StackPanel>
                </Button>
            </WrapPanel>

        </StackPanel>
    </Border>
</Window>
