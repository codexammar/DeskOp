<Window x:Class="DeskOp.BottomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BottomWindow"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        SizeToContent="WidthAndHeight"
        MouseDown="Window_MouseDown"
        MouseLeftButtonUp="Window_MouseLeftButtonUp"
        MouseMove="Window_MouseMove"
        Loaded="Window_Loaded">

    <Border x:Name="RootBorder"
            Background="#CC1E1E1E"
            CornerRadius="20"
            Padding="12"
            Margin="10">
        <Border.Effect>
            <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
        </Border.Effect>

        <StackPanel>
            <TextBlock Text="ðŸ“¦ Plugin Area"
                       Foreground="White"
                       FontSize="16"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,6"/>

            <WrapPanel HorizontalAlignment="Center">
                <Button Content="Demo 1" Margin="6" Padding="12,6"/>
                <Button Content="Demo 2" Margin="6" Padding="12,6"/>
                <Button Content="Demo 3" Margin="6" Padding="12,6"/>
            </WrapPanel>
        </StackPanel>
    </Border>
</Window>
